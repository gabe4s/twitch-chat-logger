<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>greetServlet</servlet-name>
    <servlet-class>com.gwdedb.twitchchatlogger.server.GreetingServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>greetServlet</servlet-name>
    <url-pattern>/twitchchatlogger/greet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>postServlet</servlet-name>
    <servlet-class>com.gwdedb.twitchchatlogger.server.servlet.LogChatServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>postServlet</servlet-name>
    <url-pattern>/log</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>channelAndDateServlet</servlet-name>
    <servlet-class>com.gwdedb.twitchchatlogger.server.servlet.ChannelAndDateServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>channelAndDateServlet</servlet-name>
    <url-pattern>/channel/*/*</url-pattern>
  </servlet-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>TwitchChatLogger.html</welcome-file>
  </welcome-file-list>

</web-app>
